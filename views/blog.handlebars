<div class="card">
  <header class="card-header p-3">
    <p class="card-header-title">{{blog.title}}</p>
    <p class="has-text-right m-auto pr-2">Posted by {{blog.user.username}} on {{format_time blog.date_created}} </p>
  </header>
  <div class="card-content">
    <p class="content">{{blog.content}}</div>
  </div>
</div>

{{#if Comment.length}}
  {{#each comments as |comment|}}
    <div class="card">
      <div class="card-content">
        <p>{{comment.comments}}</p></br>
        <p>-{{comment.user.username}}, {{format_time comment.date_created}}</p>
      </div>
    </div>
  {{/each}}
{{/if}}

<div class="card">
  <header class="card-header">
  </header>
  <div class="card-content">
    <div class="content">
      <form class="form new-blog-form">
        <div class="field">
          <label class="label">Comment</label>
          <div class="control">
            <textarea class="textarea is-small" id="blog-comment" name="blog-comment"></textarea>
          </div>
        </div>
        <div class="field mb-2">
            <button type="submit" class="button is-fullwidth has-text-white" data-id="new-comment">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="./js/dashboard.js"></script>